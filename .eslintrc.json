{
  "root": true,
  "parser": "babel-eslint",
  "plugins": [ "react", "react-hooks" ],
  "extends": ["plugin:import/errors", "plugin:import/warnings"],
  "env": { "browser": true, "es6": true, "node": true },
  "settings": { "import/resolver": "webpack", "react": { "version": "detect" } },
  "parserOptions": { "sourceType": "module", "ecmaFeatures": { "jsx": true, "legacyDecorators": true } },
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "indent": ["warn",2,{ "SwitchCase": 1 }],
    "linebreak-style": [ "error", "unix" ],
    "semi": [ "error", "always" ],
    "quotes": [ "error", "single" ],
    "no-cond-assign": ["error","except-parens"],
    "no-constant-condition": "error",
    "block-spacing": "warn",
    "space-in-parens": "warn",
    "comma-spacing": "warn",
    "rest-spread-spacing": "warn",
    "space-before-blocks": "warn",
    "no-dupe-args": "error",
    "semi-spacing": "warn",
    "no-dupe-keys": "error",
    "arrow-parens": ["warn", "always"],
    "key-spacing": "warn",
    "object-curly-spacing": ["warn", "always"],
    "arrow-spacing": "warn",
    "jsx-quotes": ["warn", "prefer-single"],
    "keyword-spacing": "warn",
    "computed-property-spacing": "warn",
    "template-curly-spacing": "warn",
    "no-multi-spaces": "warn",
    "space-infix-ops": "warn",
    "no-duplicate-case": "error",
    "space-unary-ops": "warn",
    "no-empty": [ "error", { "allowEmptyCatch": true } ],
    "no-extra-semi": "error",
    "no-irregular-whitespace": "error",
    "no-sparse-arrays": "error",
    "no-template-curly-in-string": "error",
    "no-unreachable": "error",
    "use-isnan": "error",
    "eqeqeq": "error",
    "no-alert": "warn",
    "no-caller": "error",
    "no-eval": "error",
    "no-labels": "error",
    "no-implied-eval": "error",
    "no-loop-func": "error",
    "no-script-url": "error",
    "require-await": "error",
    "yoda": "error",
    "no-unused-vars": ["warn", { "varsIgnorePattern": "[iI]gnored[0-9]*" }],
    "no-path-concat": "error",
    "brace-style": ["warn", "1tbs", { "allowSingleLine": true }],
    "camelcase": "error",
    "no-lonely-if": "error",
    "no-tabs": "error",
    "no-trailing-spaces": "warn",
    "constructor-super": "error",
    "no-const-assign": "error",
    "no-dupe-class-members": "error",
    "no-duplicate-imports": "error",
    "no-var":"error",
    "prefer-const": ["warn", { "destructuring": "all" }],
    "prefer-rest-params": "error",
    "no-undef": "warn",
    "react/no-direct-mutation-state": "error",
    "react/no-redundant-should-component-update": "error",
    "react/prefer-es6-class": "error",
    "react/prop-types": [ "warn", { "ignore": [ "location","history", "match"] } ],
    "react/react-in-jsx-scope": "error",
    "react/require-render-return": "error",
    "react/style-prop-object": "error",
    "react/jsx-no-duplicate-props": "error",
    "react/jsx-no-undef": "error",
    "react/jsx-uses-vars": "error",
    "react/jsx-uses-react": "error",
    "react/jsx-closing-tag-location": "warn",
    "react/jsx-indent": ["warn", 2],
    "react/jsx-pascal-case": "error",
    "import/no-unresolved": "error",
    "import/no-dynamic-require": "error",
    "import/no-extraneous-dependencies": "error",
    "import/first": "error",
    "import/no-duplicates": "error"
  }
}